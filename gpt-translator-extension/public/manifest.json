{
    "manifest_version": 3,
    "name": "GPT 번역 플러그인",
    "version": "1.0",
    "description": "GPT 기반 번역 확장 프로그램",
    "permissions": ["activeTab", "contextMenus", "storage"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "index.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "16": "icons/16p.png",
      "48": "icons/48p.png"
    }
  }
  